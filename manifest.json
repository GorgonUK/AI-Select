{
  "manifest_version": 3,
  "name": "Ask ChatGPT",
  "version": "1.4",
  "description": "Utilize ChatGPT on text selections across the web.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "icons": {
    "48": "assets/logo/AskChatGPT-48.png",
    "128": "assets/logo/AskChatGPT-128.png",
    "512": "assets/logo/AskChatGPT-512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["index.js","assets/js/mdb.min.js"],
      "css": ["assets/css/fa.min.css","assets/css/core.min.css","assets/css/mdb.min.css"]
    }
  ],
  "action": {
    "default_icon": "assets/logo/AskChatGPT-512.png",
    "default_popup": "index.html"
  }
}
